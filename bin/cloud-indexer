#!/bin/sh

set -ex

# seed data
export CTS_RESOLVER=api CTS_API_ENDPOINT=https://perseus-cts-dev.eu1.eldarioncloud.com/api/cts
python manage.py load_text_repos

export CTS_RESOLVER=local
python manage.py indexer \
    --pusher=pubsub \
    --pubsub-project=ec-perseus \
    --pubsub-topic=indexer-dev-documents
